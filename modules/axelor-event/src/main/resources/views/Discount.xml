<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<grid model="com.axelor.apps.event.db.Discount" title="Discounts" name="discount-grid">
		<field name="beforeDays" />
		<field name="discountPercentage" />
		<field name="discountAmount"/>
	</grid>
	<form model="com.axelor.apps.event.db.Discount" title="Discount" name="discount-form">
		<field name="beforeDays" onChange="action-discount-method-check-beforeDay"/>
		<field name="discountPercentage" onChange="action-event-discount-method-setDiscountAmount"/>
		<field name="discountAmount" readonly="true"/>
	</form>
	<action-method name="action-event-discount-method-setDiscountAmount">
		<call class="com.axelor.apps.event.web.DiscountController" method="setDiscountAmount"/>
	</action-method>
	<action-method name="action-discount-method-check-beforeDay">
		<call class="com.axelor.apps.event.web.DiscountController" method="setBeforeDay"/>
	</action-method>
</object-views>