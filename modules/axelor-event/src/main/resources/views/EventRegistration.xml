<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<grid model="com.axelor.apps.event.db.EventRegistration" title="Event Registrations" name="event-registration-grid">
		<field name="event" />
		<field name="name" />
		<field name="email" />
		<field name="registrationDate" />
		<field name="amount" />
	</grid>

	<form model="com.axelor.apps.event.db.EventRegistration" title="Event Registration" name="event-registration-form" onNew="action.event.method.setDefaults">
		<panel title="Personal Information">
			<field name="name" />
			<field name="email" />
			<field name="address" />
		</panel>
		<panel colSpan="12">
			<field name="registrationDate" onChange="action-event-method-calAmount" showIf="event"/>
			<field name="event" canNew="false"/>
		</panel>
		<panel>
			<field name="amount" />
		</panel>
	</form>
	
	<action-method name="action.event.method.setDefaults">
		<call class="com.axelor.apps.event.web.EventRegistrationController" method="defaults"/>
	</action-method>
	<action-method name="action-event-method-calAmount">
		<call class="com.axelor.apps.event.web.EventRegistrationController" method="calculateAmount"/>
	</action-method>
</object-views>