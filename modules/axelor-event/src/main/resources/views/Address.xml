<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<grid model="com.axelor.apps.event.db.Address" title="Addresses" name="address-grid">
		<field name="fullname"/>
	</grid>

	<form model="com.axelor.apps.event.db.Address" title="Address" name="address-form">
		<panel name="address">
			<field name="houseNo" colSpan="6"/>
			<field name="street" colSpan="6"/>
			<field name="city" colSpan="6" required="true"/>
			<field name="country" colSpan="6" required="true"/>
		</panel>
	</form>
</object-views>